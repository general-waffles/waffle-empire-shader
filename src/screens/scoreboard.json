{
  "namespace": "scoreboard_overlay",

  "bg": {
    "type": "image",
    "texture": "src/assets/white"
  },

  "scoreboard_sidebar": {
    "type": "stack_panel",
    "size": ["100%cm", "100%c"],
    "anchor_from": "$scoreboard_position",
    "anchor_to": "$scoreboard_position",
    "max_size": [232, 145],
    "offset": [-1, 0],
    "ignored": "$scoreboards_feature_disabled",
    "controls": [
      { "header": {
          "type": "panel",
          "size": ["100%sm", 10],
          "inherit_max_sibling_width": true,
          "controls": [
            { "bg@scoreboard_overlay.bg": {
                "size": ["100%", 10],
                "color": "$scoreboard_header_bg_color",
                "alpha": "$scoreboard_header_bg_alpha"
              }
            },
            { "displayed_objective": {
                "type": "label",
                "size": ["default", 10],
                "text": "#objective_sidebar_name",
                "anchor_from": "top_middle",
                "anchor_to": "top_middle",
                "text_alignment": "center",
                "inherit_max_sibling_width": true,
                "locked_alpha": 1.0,
                "layer": 1,
                "alpha": "$scoreboard_header_text_alpha",
                "color": "$scoreboard_header_text_color",
                "bindings": [
                  { "binding_name": "#objective_sidebar_name",
                    "binding_type": "global"
                  }
                ]
              }
            }
          ]
        }
      },
      {
        "list@scoreboard_overlay.bg": {
          "color": "$scoreboard_list_bg_color",
          "alpha": "$scoreboard_list_bg_alpha",
          "inherit_max_sibling_width": true,
          "size": ["100%cm + 8px", "100%cm"],
          "controls": [
            { "players": {
                "type": "stack_panel",
                "anchor_from": "top_left",
                "anchor_to": "top_left",
                "size": ["100%cm", "100%c"],
                "offset": [1.5, 0.5],
                "orientation": "vertical",
                "collection_name": "scoreboard_players",
                "factory": {
                  "name": "player_list_factory",
                  "control_name": "scoreboard_overlay.scoreboard_sidebar_player"
                },
                "bindings": [
                  { "binding_name": "#scoreboard_sidebar_size",
                    "binding_type": "global",
                    "binding_name_override": "#collection_length"
                  }
                ]
              }
            },
            {
              "scores": {
                "type": "stack_panel",
                "anchor_from": "top_right",
                "anchor_to": "top_right",
                "offset": [-0.5, 0.5],
                "ignored": "$scoreboard_ignore_numbers",
                "size": [ "100%cm", "100%c" ],
                "orientation": "vertical",
                "collection_name": "scoreboard_scores",
                "factory": {
                  "name": "player_score_factory",
                  "control_name": "scoreboard_overlay.scoreboard_sidebar_score"
                },
                "bindings": [
                  { "binding_name": "#scoreboard_sidebar_size",
                    "binding_type": "global",
                    "binding_name_override": "#collection_length"
                  }
                ]
              }
            }
          ]
        }
      }
    ],
    "bindings": [
      { "binding_name": "#scoreboard_sidebar_visible",
        "binding_type": "global",
        "binding_name_override": "#visible"
      }
    ]
  },
  
  "scoreboard_sidebar_score": {
    "type": "label",
    "layer": 2,
    "size": ["default", 10],
    "text": "#player_score_sidebar",
    "text_alignment": "right",
    "anchor_from": "top_right",
    "anchor_to": "top_right",
    "inherit_max_sibling_width": true,
    "locked_alpha": 1.0,
    "alpha": "$scoreboard_list_text_alpha",
    "color": "$scoreboard_score_text_color",
    "bindings": [
      { "binding_name": "#player_score_sidebar",
        "binding_type": "collection",
        "binding_collection_name": "scoreboard_scores"
      }
    ]
  },

  "scoreboard_sidebar_player": {
    "type": "label",
    "text": "#player_name_sidebar",
    "text_alignment": "left",
    "size": ["default", 10],
    "anchor_from": "top_right",
    "anchor_to": "top_right",
    "inherit_max_sibling_width": true,
    "alpha": "$scoreboard_list_text_alpha",
    "color": "$scoreboard_players_text_color",
    "locked_alpha": 1.0,
    "layer": 2,
    "bindings": [
      { "binding_name": "#player_name_sidebar",
        "binding_type": "collection",
        "binding_collection_name": "scoreboard_players"
      }
    ]
  }
}