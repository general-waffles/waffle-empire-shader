{
  "namespace": "pack_settings_jexp",

  "screen_content": {
    "type": "panel",
    "controls": [
      { "title@pack_settings_jexp.title": {} },
      { "tier_content_panel@pack_settings_jexp.tier_content_panel": {} }
    ]
  },

  "title@screen_jexp.title": {
    "text": "#pack_settings_title",
    "size": ["default", "default"],
    "offset": [0, 12],
    "text_alignment": "center",
    "anchor_to": "top_middle",
    "anchor_from": "top_middle",
    "property_bag": { "#tts_dialog_title": "#pack_settings_title"  },
    "bindings": [
      { "binding_type": "global",
        "binding_condition": "none",
        "binding_name": "#pack_settings_title",
        "binding_name_override": "#pack_settings_title"
      },
      { "binding_type": "global",
        "binding_condition": "once",
        "binding_name": "#tts_dialog_title"
      }
    ]
  },

  "tier_content_panel": {
    "type": "stack_panel",
    "size": [310, "100%c" ],
    "offset": [0, "-36%"],
    "anchor_to": "top_middle",
    "anchor_from": "center",
    "controls": [
      { "slider_panel": {
          "type": "panel",
          "size": [ "100%", 20 ],
          "bindings": [
            { "binding_name": "#has_content_tiering",
              "binding_name_override": "#visible"
            }
          ],
          "controls": [
            { "content_tier_slider@slider_jexp.slider": {
                "anchor_from": "center",
                "anchor_to": "center",
                "$sldr_sel_on_hov": true,
                "$sldr_desel_btn": "button.menu_exit",
                "size": [ "100%", 20],
                "layer": 1,
                "$sldr_nm": "content_tier_slider",
                "$sldr_bdg_type": "global",
                "$sldr_value_bdg_nm": "#content_tier_value",
                "$sldr_steps_bdg_type": "global",
                "$sldr_steps_bdg_nm": "#content_tier_steps",
                "$sldr_enabled_bdg_type": "global",
                "$sldr_enabled_bdg_nm": "#has_content_tiering",
                "$sldr_cont": "pack_settings_jexp.slider_text_panel",
                "$sldr_tts_hdr": "",
                "$sldr_tts_text_value": "#content_tier_slider_text_value"
              }
            }
          ]
        }
      },
      { "incompatible_label_panel": {
          "type": "panel",
          "size": [ "100%", "100%c + 2px" ],
          "bindings": [
            { "binding_name": "#has_content_tiering",
              "binding_name_override": "#visible"
            }
          ],
          "controls": [
            { "label": {
                "type": "label",
                "text": "#text",
                "color": "$error_text_color",
                "anchor_from": "bottom_left",
                "anchor_to": "bottom_left",
                "layer": 1,
                "size": [ "100%-8px", "default" ],
                "offset": [ 4, -2 ],
                "bindings": [
                  { "binding_name": "(not #content_tier_supported)",
                    "binding_name_override": "#visible"
                  },
                  { "binding_name": "#incompatible_reason",
                    "binding_name_override": "#text"
                  }
                ]
              }
            }
          ]
        }
      },
      { "space@screen_jexp.v10px": {} },
      { "exit": {
          "type": "panel",
          "size": ["100%", 20],
          "controls": [
            { "btn@button_jexp.button": {
                "offset": ["50% - 50%x", 0],
                "$prsd_btn_nm": "button.menu_exit",
                "$btn_text": "gui.done"
              }
            }
          ]
        }
      }
    ]
  },

  "slider_text_panel": {
    "type": "panel",
    "controls": [
      { "content_tier_label": {
          "type": "label",
          "text": "#text",
          "color": "$text_color",
          "shadow": true,
          "layer": 1,
          "localize": false,
          "bindings": [
            { "binding_name": "#content_tier_label",
              "binding_name_override": "#text"
            },
            { "binding_name": "#content_tier_supported",
              "binding_name_override": "#visible"
            }
          ]
        }
      },
      { "unsupported_content_tier_label": {
          "type": "label",
          "text": "#text",
          "color": "$error_text_color",
          "layer": 1,
          "localize": false,
          "bindings": [
            { "binding_name": "#content_tier_label",
              "binding_name_override": "#text"
            },
            { "binding_name": "(not #content_tier_supported)",
              "binding_name_override": "#visible"
            }
          ]
        }
      }
    ]
  }
}