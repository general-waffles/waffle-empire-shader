  /*//// Base Assets ////*/

  "base_label": {
    "type": "label",
    "text": "$base_text",
    "size": [ "default", 10 ],
    "font_type": "smooth",
    "$base_text|default": "#edit_appearance_text",
    "bindings": "$base_text_bindings",
    "$base_text_bindings|default": [
      {
        "binding_name": "$base_text"
      }
    ]
  },

  "base_button@common.button": {
    "locked_control": "locked",
    "$font_scale_factor|default": 1.0,
    "$label_control|default": "main_profile_dx.base_label",
    "controls": [
      {
        "default": {
          "type": "panel",
          "layer": 1,
          "size": [ "100%", "100%" ],
          "controls": [
            { "base_label@$label_control": { "layer": 2, "font_scale_factor": "$font_scale_factor" } },
            {
              "border": {
                "type": "image",
                "texture": "textures/uidx/focus_border_white",
                "layer": 1,
                "color": [ 0.4352, 0.4352, 0.4352, 1.0 ],
                "size": [ "100%", "100%" ]
              }
            }
          ]
        }
      },
      {
        "hover": {
          "type": "image",
          "texture": "textures/uidx/white",
          "color": [ 0.349, 0.349, 0.349 ],
          "layer": 1,
          "size": [ "100%", "100%" ],
