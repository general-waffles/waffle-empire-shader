            { "base_label@$label_control": { "layer": 2, "font_scale_factor": "$font_scale_factor" } },
            {
              "border": {
                "type": "image",
                "texture": "textures/uidx/focus_border_white",
                "layer": 1,
                "color": [ 0.549, 0.549, 0.549, 1.0 ],
                "size": [ "100%", "100%" ]
              }
            }
          ]
        }
      },
      {
        "pressed": {
          "type": "image",
          "texture": "textures/uidx/white",
          "color": [ 0.3, 0.3, 0.3 ],
          "layer": 1,
          "size": [ "100%", "100%" ],
